<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- ========= Shock Rifle ========== -->
  <ThingDef Class="RidiculousCheat.ShockBulletThingDef" ParentName="BaseBullet">
    <defName>Bullet_ShockRifle</defName>
    <label>shock shot</label>
    <graphicData>
      <texPath>Things/Projectile/Charge_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>0</damageAmountBase>
      <speed>100</speed>
    </projectile>
    <thingClass>RidiculousCheat.ShockBulletProjectileDef</thingClass>
    <HediffToAdd>KnockedOut</HediffToAdd>
  </ThingDef>

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_ShockRifle</defName>
    <label>shock rifle</label>
    <description>Charged-shot energy/projectile rifle that knocks opponents out.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/ChargeRifle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>InteractChargeRifle</soundInteract>
    <statBases>
      <WorkToMake>1</WorkToMake>
      <Mass>1</Mass>
      <AccuracyTouch>1.0</AccuracyTouch>
      <AccuracyShort>1.0</AccuracyShort>
      <AccuracyMedium>1.0</AccuracyMedium>
      <AccuracyLong>1.0</AccuracyLong>
      <RangedWeapon_Cooldown>.5</RangedWeapon_Cooldown>
      <Weapon_Bulk>0.1</Weapon_Bulk>
    </statBases>
    <costList>
      <Steel>1</Steel>
    </costList>
    <weaponTags>
      <li>Sugoi</li>
    </weaponTags>
    <tradeTags>
      <li>Exotic</li>
    </tradeTags>
    <generateCommonality>0.30</generateCommonality>
    <techLevel>Spacer</techLevel>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_ShockRifle</defaultProjectile>
        <warmupTime>1.1</warmupTime>
        <range>40</range>
        <ticksBetweenBurstShots>12</ticksBetweenBurstShots>
        <burstShotCount>3</burstShotCount>
        <soundCast>ShotChargeRifle</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.8</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1.9</cooldownTime>
      </li>
    </tools>
  </ThingDef>

