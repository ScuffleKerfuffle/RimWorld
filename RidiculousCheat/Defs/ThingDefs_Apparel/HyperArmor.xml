<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ArmorMakeableBase">
    <defName>Apparel_HyperArmor</defName>
    <label>hyper armor</label>
    <description>Hyper armor is insanely durable and should never be worn by anyone, ever.</description>
    <techLevel>Spacer</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/PowerArmor/PowerArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>1</WorkToMake>
      <MaxHitPoints>3400</MaxHitPoints>
      <MarketValue>500000.00</MarketValue>
      <Mass>1</Mass>
      <Beauty>50</Beauty>
      <ArmorRating_Blunt>1.20</ArmorRating_Blunt>
      <ArmorRating_Sharp>1.20</ArmorRating_Sharp>
      <ArmorRating_Heat>1.20</ArmorRating_Heat>
      <ArmorRating_Electric>1.20</ArmorRating_Electric>
      <Insulation_Cold>-40</Insulation_Cold>
      <Insulation_Heat>150</Insulation_Heat>
    </statBases>
    <costList>
      <Steel>1</Steel>
    </costList>
    <equippedStatOffsets>
      <MoveSpeed>+3.00</MoveSpeed>
      <WorkSpeedGlobal>+3.00</WorkSpeedGlobal>
    </equippedStatOffsets>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <generateCommonality>2</generateCommonality>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/PowerArmor/PowerArmor</wornGraphicPath>
      <layers>
        <li>Middle</li>
        <li>Shell</li>
      </layers>
      <tags>
        <li>Sugoi</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>RGBA(0.33,0.33,0.33,1)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>RGBA(0.65,0.65,0.65,1)</only>
        </li>
        <li>
          <weight>6</weight>
          <min>RGBA(0.3,0.3,0.3,1)</min>
          <max>RGBA(0.5,0.5,0.5,1)</max>
        </li>
        <li>
          <weight>10</weight>
          <only>RGBA(0.9,0.9,0.9,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
