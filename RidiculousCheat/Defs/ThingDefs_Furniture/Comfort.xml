  <ThingDef ParentName="ArtableBedBase">
    <defName>ComfortBed</defName>
    <label>Comfort Bed 5000</label>
    <description>The best single bed on the market. Ridiculously comfortable.</description>
    <graphicData>
      <texPath>Things/Building/Furniture/Bed/Bed</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(3,4)</drawSize>
      <damageData>
        <rect>(0,0.05,1,1.95)</rect>
