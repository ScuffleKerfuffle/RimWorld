<Defs>
  <TerrainDef Name="SteriFloorJade">
    <defName>SteriFloorJade</defName>
    <label>Steri-Floor (jade)</label>
    <description>Steri-Floor. Sterility and beauty wrapped in a single gorgeous package. Now available in gold, jade, marble, plasteel, and classic "sterile tile" varieties!</description>
    <texturePath>Terrain/JadeFloor</texturePath>
    <edgeType>FadeRough</edgeType>
    <layerable>true</layerable>
    <affordances>
      <li>Light</li>
      <li>Heavy</li>
      <li>SmoothHard</li>
    </affordances>
    <statBases>
      <WorkToBuild>1</WorkToBuild>
      <Beauty>6</Beauty>
      <Cleanliness>1.0</Cleanliness>
    </statBases>
    <costList>
      <Jade>1</Jade>
    </costList>
    <designationCategory>Floors</designationCategory>
    <fertility>0</fertility>
    <constructEffect>ConstructMetal</constructEffect>
    <acceptTerrainSourceFilth>True</acceptTerrainSourceFilth>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
  </TerrainDef>

